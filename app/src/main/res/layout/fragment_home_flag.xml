<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6151414"
    tools:context=".fragments.HomeFlag">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="2dp"
          android:layout_marginStart="2dp">

         <androidx.appcompat.widget.AppCompatImageView
             android:id="@+id/search"
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_marginEnd="20dp"
             android:layout_marginTop="15dp"
             android:background="@drawable/backgroundsmall"
             android:padding="6dp"
             android:tint="@color/white"
             android:src="@drawable/search_magn"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"/>

         <com.google.android.material.textview.MaterialTextView
          android:id="@+id/text_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="10dp"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="1"
          android:textColor="@color/white"
          android:textSize="19sp"
          android:textStyle="bold"
          android:text="Noah ikefouuibfehilb"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="@id/search"
          app:layout_constraintTop_toTopOf="@id/search"
          app:layout_constraintEnd_toStartOf="@id/spinner"/>

         <Spinner
             android:id="@+id/spinner"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:backgroundTint="@color/white"
             app:layout_constraintBottom_toBottomOf="@id/text_name"
             app:layout_constraintStart_toEndOf="@id/text_name"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/grow_your_business"
             android:layout_width="match_parent"
             android:layout_height="220dp"
             android:layout_marginTop="30dp"
             app:cardCornerRadius="20dp"
             android:scaleType="centerCrop"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             app:layout_constraintTop_toBottomOf="@id/text_name"
             android:src="@drawable/grow_your_business">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/grow_your_business"/>

         </androidx.cardview.widget.CardView>

         <com.google.android.material.textview.MaterialTextView
             android:id="@+id/text_grow_your_business"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/grow_your_business"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="20dp"
             android:text="Live Campaigns"
             android:textStyle="bold"

             android:textSize="16sp"
             android:textColor="@color/white"
             android:layout_marginTop="30dp"/>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/live_campaigns"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@id/text_grow_your_business"/>

         <com.google.android.material.textview.MaterialTextView
             android:id="@+id/testimonials"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/live_campaigns"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="20dp"
             android:text="Testimonials and Tips"
             android:textStyle="bold"
             android:textSize="16sp"
             android:textColor="@color/white"
             android:layout_marginTop="30dp"/>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/testimonials_list"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@id/testimonials"/>

         <com.google.android.material.textview.MaterialTextView
             android:id="@+id/blogs"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/testimonials_list"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="20dp"
             android:text="Blog"
             android:textStyle="bold"
             android:textSize="16sp"
             android:textColor="@color/white"
             android:layout_marginTop="30dp"/>

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/blogs_list"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@id/blogs"/>

         <androidx.cardview.widget.CardView
             android:id="@+id/business_profile"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/blogs_list"
             app:cardCornerRadius="20dp"
             android:layout_marginTop="30dp"
             android:backgroundTint="#19FFFFFF"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/background"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_height="120dp">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="centerCrop"
                   android:src="@drawable/smoothies"
                   android:contentDescription="smoothies"/>
            </com.google.android.material.card.MaterialCardView>

               <com.makeramen.roundedimageview.RoundedImageView
                   android:id="@+id/profile_image"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_below="@id/background"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="-30dp"
                   android:background="@drawable/background_rounded"
                   android:elevation="20dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/orzora_black"
                   app:riv_oval="true" />

               <com.google.android.material.card.MaterialCardView
                   android:id="@+id/business_profile_card"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@id/profile_image"
                   android:layout_marginTop="30dp"
                   android:layout_centerHorizontal="true"
                   android:outlineAmbientShadowColor="@color/black"
                   android:backgroundTint="#92000000"
                   app:cardCornerRadius="7dp">

                  <com.google.android.material.textview.MaterialTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:padding="10dp"
                      android:textSize="16sp"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:text="Business Profile"/>

               </com.google.android.material.card.MaterialCardView>

               <RelativeLayout
                   android:id="@+id/layout_things"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:layout_below="@id/business_profile_card">

                  <LinearLayout
                      android:id="@+id/visits"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentStart="true"
                      android:layout_marginStart="20dp">
                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_visits_1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Visits"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>

                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_visits_2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="50k"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/engagements"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_centerHorizontal="true">
                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_engagements_1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Engagements"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>

                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_engagements_2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="50k"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/sells"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_alignParentEnd="true"

                      android:layout_marginEnd="20dp">
                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_sells_1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Sells"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>

                     <com.google.android.material.textview.MaterialTextView
                         android:id="@+id/text_sells_2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:layout_gravity="center"
                         android:text="50k"
                         android:textColor="@color/white"
                         android:textSize="16sp"/>
                  </LinearLayout>

               </RelativeLayout>

            </RelativeLayout>

         </androidx.cardview.widget.CardView>

      </androidx.constraintlayout.widget.ConstraintLayout>

   </androidx.core.widget.NestedScrollView>
</FrameLayout>